{{!
    @template enrol_coursepayment/element_orderdata

    Invoice orderdata

    Example context (json):
    {
        "width" : "100",
        "color" : "#bbb",
        "coursename" : "Name",
        "vat" : "21",
        "subtotal" : "10.01",
        "vat_price" : "1.01",
        "total" : "10.01"
    }
}}

<table style="width:{{width}}px;color:{{color}};" cellpadding="5" cellspacing="2">
    <tr>
        <th style="font-weight: bold;text-align:left">{{# str}} orderdata:coursename, enrol_coursepayment {{/ str}}</th>
        <th style="font-weight: bold;text-align:left">{{# str}} orderdata:vat, enrol_coursepayment {{/ str}}</th>
        <th style="text-align: right;font-weight: bold">{{# str}} orderdata:total, enrol_coursepayment {{/ str}}</th>
    </tr>
    <tr>
        <td>{{coursename}}</td>
        <td>{{vat}}%</td>
        <td style="text-align: right">&euro; {{subtotal}}</td>
    </tr>
    <tr>
        <td colspan="3">&nbsp;</td>
    </tr>
    <tr>
        <td>{{# str}} orderdata:subtotal, enrol_coursepayment {{/ str}}</td>
        <td colspan="2" style="text-align: right">&euro; {{subtotal}}</td>
    </tr>
    <tr>
        <td>{{# str}} orderdata:vat, enrol_coursepayment {{/ str}} ({{vat}}%)</td>
        <td colspan="2" style="text-align: right">&euro; {{vat_price}}</td>
    </tr>
    <tr>
        <td><b>{{# str}} orderdata:total, enrol_coursepayment {{/ str}}</b></td>
        <td colspan="2" style="text-align: right"><b>&euro; {{total}}</b></td>
    </tr>
</table>
